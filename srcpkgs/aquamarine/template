configure_args=" --no-warn-unused-cli \
   -DCMAKE_BUILD_TYPE=Release \
   -DCMAKE_C_COMPILER=clang \
   -DCMAKE_CXX_COMPILER=clang++ \
   -DCMAKE_CXX_STANDARD=23 \
   -DCMAKE_CXX_FLAGS=-stdlib=libc++
"
