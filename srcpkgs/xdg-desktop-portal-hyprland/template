# Template file for 'xdg-desktop-portal-hyprland'
pkgname=xdg-desktop-portal-hyprland
version=1.3.6
revision=1
build_style=cmake
hostmakedepends="pkg-config scdoc cmake git"
makedepends="
	basu-devel
	hyprlang-devel
	hyprutils-devel
	sdbus-cpp-devel
	hyprland-protocols
	hyprwayland-scanner
	wayland-devel
	wayland-protocols
	pipewire-devel
	libgbm-devel
	libdrm-devel
	elogind-devel
	qt6-base-devel
"
depends="
	basu
	hyprlang
	hyprutils
	sdbus-cpp
	hyprwayland-scanner
	xdg-desktop-portal
	pipewire
	qt6-base
	qt6-wayland
"
short_desc="Backend of xdg-desktop-portal for Hyprland"
maintainer="hesam-init <hesam.init@gmail.com>"
license="BSD-3-Clause"
homepage="https://github.com/hyprwm/xdg-desktop-portal-hyprland"
distfiles="https://github.com/hyprwm/xdg-desktop-portal-hyprland/archive/refs/tags/v${version}.tar.gz"
checksum="cf9742c5a6df3de58abf631f01d58c5df0db417004aa8e6852f6533cc8f2938e"

build_options="clang"
build_options_default=""
desc_option_clang="Use clang to build"

if [ "$build_option_clang" ]; then
	hostmakedepends+=" clang19"
	makedepends+=" libcxx libcxx-devel libcxxabi libcxxabi-devel"
fi

pre_configure() {
	if [ "$build_option_clang" ]; then
		export CC=clang
		export CXX=clang++

		configure_args+=" -DCMAKE_C_COMPILER=$CC -DCMAKE_CXX_COMPILER=$CXX -DCMAKE_CXX_STANDARD=23 -DCMAKE_CXX_FLAGS=-stdlib=libc++"
	fi
}

post_install() {
	vlicense LICENSE
}
